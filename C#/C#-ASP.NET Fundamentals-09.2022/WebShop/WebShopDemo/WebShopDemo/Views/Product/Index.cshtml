@model IEnumerable<ProductViewModel>

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Buy</td>
            <td>Delete</td>
            <td>Edit</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>
                    <form asp-controller="Product" asp-action="Buy" method="post">
                        <input name="id" type="hidden" value="@item.Id.ToString()">
                        <a asp-controller="Product" asp-action="Buy" asp-route-id="@item.Id" class="btn btn-success">Buy</a>
                    </form>
                </td>
                <td>
                    <form asp-controller="Product" asp-action="Delete" method="post">
                        <input name="id" type="hidden" value="@item.Id.ToString()">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete post: @item.Name')">Delete</button>
                    </form>
                </td>
                <td>
                    <form method="post">
                        <input name="id" type="hidden" value="@item.Id">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-3">Add</button>
    </div>
</form>

