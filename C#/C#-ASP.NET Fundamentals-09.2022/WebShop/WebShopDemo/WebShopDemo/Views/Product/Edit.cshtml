@model ProductViewModel

<h4>@ViewData["Title"]</h4>

<form asp-controller="Product" asp-action="Edit" method="post">
<input type="hidden" asp-for="@Model.Id"/>
<input asp-for="ModifiedDate" type="hidden" value="@DateTime.UtcNow.ToString(CultureInfo.InvariantCulture)" />
    <div class="form-group">
        <label asp-for="Name">Product name</label>
        <input asp-for="Name" class="form-control" placeholder="Product name">
        <span asp-validation-for="@Model.Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Product price</label>
        <input asp-for="Price" class="form-control" placeholder="Product price">
        <span asp-validation-for="@Model.Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Product quantity</label>
        <input asp-for="Quantity" class="form-control" placeholder="Product quantity">
        <span asp-validation-for="@Model.Quantity" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary mt-3" type="submit" value="Submit" />
        <button type="reset" class="btn btn-secondary mt-3">Clear</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
