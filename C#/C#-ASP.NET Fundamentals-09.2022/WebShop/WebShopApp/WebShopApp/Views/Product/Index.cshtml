@model IEnumerable<ProductViewModel>

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<form asp-controller="Product" asp-action="Search" method="post">
    <div class="input-group mb-3">
        <input name="name" type="text" class="form-control" placeholder="Search product" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-info" type="submit" id="name">Search</button>
        </div>
    </div>
</form>

<hr />
@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Info</th>
                <th scope="col">Buy</th>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>
                        <form>
                            <input name="id" type="hidden" value="@product.Id">
                            <a asp-controller="Product" asp-action="Info" asp-route-id="@product.Id" class="btn btn-outline-info">Info</a>
                        </form>
                    </td>
                    <td>
                        <button class="btn btn-outline-success">Buy</button>
                    </td>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <td>
                            <form method="post">
                                <input name="id" type="hidden" value="@product.Id">
                                @if (User.Identity.Name.Equals(product.CreatedUser))
                                {
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-warning">Edit</a>
                                }
                            </form>
                        </td>
                        <td>
                            <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                                <input name="username" type="hidden" value="@product.CreatedUser">
                                @if (User.Identity.Name.Equals(product.CreatedUser))
                                {
                                <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="myConfirm(event)" />
                                }
                            </form>
                        </td>
                    }
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No avaylable products yet!</p>
}
<div class="d-grid gap-2 mb-2">

    <a asp-controller="Product" asp-action="Add" class="btn btn-outline-primary">Add Product</a>

</div>

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Are you sure want delete product?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your has been deleted product.',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.submit();
                    })
                }
            })
        }
    </script>
}


