@model IEnumerable<ProductViewModel>


<h2 class="text-center">@ViewData["Title"]</h2>

<hr />

@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>
                        <form>
                            <input name="id" type="hidden" value="@product.Id">
                            <a asp-controller="Product" asp-action="Info" asp-route-id="@product.Id" class="btn btn-outline-info">Info</a>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No items found!</p>
}

<div class="d-grid gap-2 mb-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-outline-primary">Add Product</a>
    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back</a>
</div>


