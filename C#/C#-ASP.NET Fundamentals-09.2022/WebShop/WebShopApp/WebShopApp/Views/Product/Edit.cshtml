@model ProductViewModel

@if (ViewData["Title"]?.Equals("Add product") ?? false)
{
    ViewData["Message"] = "Add";
}
else
{
    ViewData["Message"] = "Edit";
}

<section class="vh-20 gradient-custom">
    <div class="container py-2 h-50">
        <div class="row justify-content-center align-items-center h-50">
            <div class="col-6 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-3">
                        <h2 class="text-uppercase text-center mb-2">@ViewData["Title"]</h2>
                        <form asp-controller="Product" asp-action="Edit" method="post">
                            <input asp-for="@Model.Id" type="hidden">
                            <input asp-for="@Model.CreatedUser" type="hidden">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-3 mb-1">
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label asp-for="@Model.Name"></label>
                                        <input asp-for="@Model.Name" class="form-control" placeholder="Write product name here...">
                                        <span asp-validation-for="@Model.Name" class="small text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-1">
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label asp-for="@Model.Price"></label>
                                        <input asp-for="@Model.Price" class="form-control">
                                        <span asp-validation-for="@Model.Price" class="small text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 mb-1">
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label asp-for="@Model.Quantity"></label>
                                        <input asp-for="@Model.Quantity" class="form-control">
                                        <span asp-validation-for="@Model.Quantity" class="small text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 mb-1">
                                </div>
                                <div class="col-md-8 mb-1">
                                    <div class="form-outline">
                                        <label asp-for="@Model.Description"></label>
                                        <textarea asp-for="@Model.Description" class="form-control" rows="8"></textarea>
                                        <span asp-validation-for="@Model.Description" class="small text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-5 mb-1">
                                </div>
                                <div class="col-md-6 mt-2">
                                    <div class="form-outline">
                                        <input class="btn btn-outline-primary" type="submit" value="@ViewData["Message"]" />
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
