@model RegisterViewModel

<section class="vh-20 gradient-custom">
    <div class="container py-2 h-50">
        <div class="row justify-content-center align-items-center h-50">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-3">
                        <h2 class="text-uppercase text-center mb-4">Create an account</h2>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Email">Email</label>
                                        <input asp-for="Email" type="text" id="email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="FirstName">First Name</label>
                                        <input asp-for="FirstName" type="text" id="firstName" class="form-control" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Username">Username</label>
                                        <input asp-for="Username" type="text" id="username" class="form-control" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="LastName">Last Name</label>
                                        <input asp-for="LastName" type="text" id="lastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="Password">Password</label>
                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline datepicker w-100">
                                        <label asp-for="BirthDate" class="form-label">Birthday</label>
                                        <input asp-for="BirthDate" type="text" class="form-control" id="birthdayDate" placeholder="dd/mm/yyyy" />
                                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline datepicker w-100">
                                        <label asp-for="Gender" class="control-label"></label>
                                        <select asp-for="Gender"
                                                class="form-control"
                                                asp-items="Html.GetEnumSelectList<Gender>()">
                                            <option>Select Gender</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-1">
                                    <div class="form-outline">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" type="tel" id="phoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 mb-1">
                                </div>
                                <div class="col-md-9 mb-1 mt-4">
                                    <div class="form-outline">
                                <p>By creating an account you agree to our <a href="/Home/Privacy">Terms & Privacy</a></p></div></div></div>
                            <div class="row">
                                <div class="col-md-5 mb-1">
                                </div>
                                <div class="col-md-3 mb-1 mt-2">
                                    <div class="form-outline">
                                        <input class="btn btn-outline-success btn-lg" type="submit" value="Register" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <p class="text-center text-muted mt-2 mb-0">
                                    Have already an account? <a asp-controller="Account" asp-action="Login" class="fw-bold text-body"><u>Login here</u></a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
